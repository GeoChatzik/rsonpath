    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'simdpath'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=simdpath",
                    "--package=simdpath"
                ],
                "filter": {
                    "name": "simdpath",
                    "kind": "bin"
                }
            },
            "args": [
                "./simdpath-tests/data/wikidata/debug.json",
                "$..references..snaks..datavalue..value..id",
                "-v"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'simdpath'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=simdpath"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
